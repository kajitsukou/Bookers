<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<%= @book.errors.count %>error
<% @book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <%= link_to "show", book_path(@book) %> |
  <a class="back" href="/books">Back</a>

<% end %>